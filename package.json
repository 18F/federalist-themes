{
  "name": "federalist-themes",
  "version": "1.0.0",
  "description": "Themes for federalist.18f.gov leveraging best practices so government sites don't have to.",
  "main": "index.js",
  "scripts": {
    "build": "run-s build:common build:theme:*",
    "build:common": "gulp build",
    "build:theme:standard": "cd federalist-standard-theme; bundle exec jekyll build",
    "clean": "gulp clean",
    "gem:build": "bundle exec rake build",
    "gem:install": "bundle exec rake install",
    "gem:release": "bundle exec rake release",
    "postinstall": "bundle install",
    "gulp": "gulp",
    "htmlproofer": "bundle exec htmlproofer",
    "setup": "run-s setup:*",
    "setup:standard": "cd federalist-standard-theme; bundle install",
    "test": "run-s test:*",
    "test:gulp": "mocha test/**/*.test.js",
    "test:standard": "npm run htmlproofer -- federalist-standard-theme/_site",
    "watch": "gulp watch"
  },
  "keywords": [
    "jekyll",
    "jekyll",
    "theme",
    "federalist",
    "uswds",
    "government"
  ],
  "author": "Aaron D Borden <adborden@a14n.net>",
  "license": "CC0-1.0",
  "dependencies": {
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-filter": "^5.1.0",
    "gulp-transform": "^3.0.5",
    "uswds": "^2.0.0-beta.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-fs": "^2.0.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5"
  }
}
